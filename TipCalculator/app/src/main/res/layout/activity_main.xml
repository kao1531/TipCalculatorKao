<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="7"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip Calculator"
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/billCostEditText"
        android:hint="Bill Cost"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="3"
        android:inputType = "numberDecimal"
        />

    <EditText
        android:id="@+id/tipPercentEditText"
        android:hint="Tip Percent"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_columnSpan="3"
        android:inputType = "numberDecimal"
        />

    <Button
        android:id="@+id/calculateButton"
        android:text="Calculate Bill"
        android:textColor="@color/colorButton"
        android:onClick="calculate"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="3"
        />

    <TextView
        android:id="@+id/finalAmountTextView"
        android:text="Final Bill Amount:"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="4"
        />

    <TextView
        android:id="@+id/tipTextView"
        android:text="Tip Amount:"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="5"
        />


    <TextView
        android:text="Quality of Service"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="6"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/happyButton"
        android:src="@drawable/happy"
        android:onClick="happyTip"
        android:layout_column="1"
        android:layout_row="7"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/neutralButton"
        android:src="@drawable/neutral"
        android:onClick="neutralTip"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sadButton"
        android:src="@drawable/sad"
        android:onClick="sadTip"
        />

    <TextView
        android:id="@+id/emojiTipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        />
</GridLayout>